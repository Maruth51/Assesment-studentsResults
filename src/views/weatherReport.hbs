<div class="container">
  <div class="page-header">
    <h1>Weather Forecast Chennai</h1>
  </div>
</div>
<div style="margin:10px 150px">
  <div class="card">
    <div class="card-header">
      <h4 class="font-weight-bold">Current Weather</h4>
    </div>
    <div class="card-body">
      <h4 class="card-title font-weight-bold">{{current.summary}}</h4>
      <div class="d-flex flex-row">
        <div class="d-flex flex-column">
          <div class="p-2 text-center">
            <span class="font-weight-bold">Temprature</span>
          </div>
          <div class="p-2 text-center"><span class="font-weight-bold">{{current.temperature}}&#8457</span></div>
        </div>
        <div class="d-flex flex-column">
          <div class="p-2 text-center"><span class="font-weight-bold">Humidity</span>
          </div>
          <div class="p-2 text-center"><span class="font-weight-bold">{{current.humidity}}</span></div>
        </div>
        <div class="d-flex flex-column">
          <div class="p-2 text-center"><span class="font-weight-bold"> Uv Index</span> </div>
          <div class="p-2 text-center"><span class="font-weight-bold">{{current.uvIndex}}</span></div>
        </div>
      </div>

    </div>
  </div>
</div>
{{#each daily}}
<div style="margin:50px 150px">
  <div class="card">
    <div class="card-header">
      <h4 class="font-weight-bold">{{convert this.time}}</h4>
    </div>
    <div class="card-body">
      <h4 class="card-title font-weight-bold">{{this.summary}}</h4>
      <div class="d-flex flex-row">
        <div class="d-flex flex-column">
          <div class="p-2 text-center">
            <span class="font-weight-bold">Temperature Max</span>
          </div>

          <div class="p-2 text-center"><span class="font-weight-bold">{{this.temperatureMax}}&#8457</span></div>
        </div>
        <div class="d-flex flex-column">
          <div class="p-2 text-center">
            <span class="font-weight-bold">Temperature Min</span>
          </div>

          <div class="p-2 text-center"><span class="font-weight-bold">{{this.temperatureMin}}&#8457</span></div>
        </div>

        <div class="d-flex flex-column">
          <div class="p-2 text-center"><span class="font-weight-bold">Humidity</span>
          </div>
          <div class="p-2 text-center"><span class="font-weight-bold">{{this.humidity}}</span></div>
        </div>
        <div class="d-flex flex-column">
          <div class="p-2 text-center"><span class="font-weight-bold"> Uv Index</span> </div>
          <div class="p-2 text-center"><span class="font-weight-bold">{{this.uvIndex}}</span></div>
        </div>
      </div>

    </div>
  </div>
</div>

{{/each}}